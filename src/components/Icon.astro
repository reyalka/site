---
import type { IconNode } from "lucide";

type Props = {
	icon: IconNode;
};

const { icon, ...props } = Astro.props;

const [, attributes, children] = icon;

const componentChildren = children
	?.map(
		([child, attributes]) =>
			`<${child} ${Object.entries(attributes)
				.map(([k, v]) => `${k}="${v}"`)
				.join(" ")} />`,
	)
	.join("\n");
---

<svg 
    {...attributes}
    {...props}
    set:html={componentChildren}
/>
