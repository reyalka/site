---
import { Github, Home, NotebookPen, Rss, type IconNode } from "lucide";
import Icon from "./Icon.astro";

const items: { name: string; href: string; icon: IconNode }[] = [
	{ name: "Home", href: "/", icon: Home },
	{ name: "Blog", href: "/blog", icon: NotebookPen },
	{ name: "Repo", href: "https://github.com/reyalka/site", icon: Github },
	{ name: "RSS", href: "/rss.xml", icon: Rss },
];
---

<header
	class="text-site-light-black flex w-svw flex-col gap-5 p-5 shadow-lg md:flex-row md:items-center"
>
	<div class="flex grow items-center transition duration-300 hover:scale-105">
		<img src="/reyalka.webp" alt="" class="h-16 w-16" />
		<a class="text-2xl italic" href="/">れやかボックス</a>
	</div>
	<nav
		class="grid grid-cols-2 items-center justify-center justify-items-center gap-4 text-lg sm:flex sm:flex-row sm:justify-start"
	>
		{
			items.map(({ name, href, icon }) => (
				<a
					class="flex items-center transition duration-300 hover:scale-105 hover:duration-75"
					href={href}
				>
					<Icon icon={icon} />
					{name}
				</a>
			))
		}
	</nav>
</header>
